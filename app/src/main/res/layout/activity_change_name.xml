<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.ChangeNameActivity">



    <include layout="@layout/toolbar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/c4"
        app:cardCornerRadius="7dp"
        android:layout_below="@id/c3"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="#2f9ff5"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp">

            <View
                android:layout_marginLeft="5dp"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:background="#2f9ff5"
                />



                <EditText
                    android:hint="请输入新用户名"
                    android:gravity="center_vertical|left"
                    android:background="@null"
                    android:maxLines="1"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/et_newname"
                    android:layout_width="310dp"
                    android:layout_height="50dp"
                    android:textSize="18sp" />



        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:layout_below="@id/c4"
        android:layout_marginBottom="20dp"
        android:id="@+id/name_set"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="20sp"
        android:text="提交"
        android:textColor="#fff"
        android:background="@drawable/blue_purse"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

</LinearLayout>