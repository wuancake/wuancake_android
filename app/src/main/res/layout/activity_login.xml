<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.wuanandroid.ui.LoginActivity">



    <RelativeLayout
        android:background="#2f9ff5"
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#ffff"
            android:text="欢迎来到煎饼计划"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12sp"
            android:layout_marginLeft="14dp"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="61dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/accountnumber2"
                android:layout_width="27dp"
                android:layout_height="27dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="384dp"
            android:layout_height="match_parent">

            <TextView
                android:text="输入电子邮箱"
                android:textColor="#2f94ff"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp" />

            <EditText
               android:layout_marginRight="5dp"
                android:id="@+id/login_account"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_width="270dp"
                android:layout_height="0dp"
                android:layout_weight="2"

                />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="61dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/mailbox"
                android:layout_width="27dp"
                android:layout_height="27dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="384dp"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/login_password"
                android:inputType="textPassword"
                android:hint="密码"
                android:textColor="#333333"
                android:textSize="20sp"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <CheckBox
            android:text="记住密码？"
            android:layout_marginTop="5dp"
            android:id="@+id/login_remeber"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="14dp" />



    </RelativeLayout>
    <Button
        android:id="@+id/login_login"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:text="登录"
        android:background="@drawable/shape"
        android:layout_width="340dp"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_marginTop="28dp"
        android:layout_gravity="right"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView

            android:textColor="#888888"
            android:text="还没有账号?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/login_register"
            android:textColor="#0000FF"
            android:layout_marginLeft="10dp"
            android:text="立即注册>"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
