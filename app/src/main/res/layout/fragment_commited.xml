<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:countdown="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="257dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/main_Week"
                android:textColor="#2f94ff"
                android:text="本周周报已提交"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:text="距离下周开始"
                android:textColor="#2f94ff"
                android:textSize="20sp" />
        </LinearLayout>
    <com.example.administrator.wuanandroid.utils.CountDownView
        android:layout_marginTop="20dp"
        countdown:text_size="60"
        android:id="@+id/commited_csv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </com.example.administrator.wuanandroid.utils.CountDownView>
    </LinearLayout>
</LinearLayout>